<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.OSL" parent="Theme.AppCompat.DayNight">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/oui_round_and_bgcolor</item>
        <item name="android:windowBackground">@color/oui_round_and_bgcolor</item>
        <item name="android:navigationBarColor">@color/oui_round_and_bgcolor</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Custom">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:maxLines">2</item>

        <item name="android:textSize">17sp</item>
        <item name="buttonCornerRadius">26dp</item>

        <item name="android:textColor">@color/commonutils_primary_text_icon_color</item>
        <item name="android:drawableTint">@color/commonutils_primary_text_icon_color</item>
        <item name="tint">@color/commonutils_primary_text_icon_color</item>
    </style>

    <style name="ButtonStyle.Colored" parent="ButtonStyle">
        <item name="android:backgroundTint">@color/primary_color_themed</item>
    </style>

    <style name="ButtonStyle.Transparent" parent="ButtonStyle">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ButtonStyle.Transparent.Themed" parent="ButtonStyle.Transparent">
        <item name="android:textColor">@color/commonutils_primary_text_icon_color_themed</item>
        <item name="android:drawableTint">@color/commonutils_primary_text_icon_color_themed</item>
        <item name="tint">@color/commonutils_primary_text_icon_color_themed</item>
    </style>

    <style name="ButtonStyle.Transparent.Colored" parent="ButtonStyle.Transparent">
        <item name="android:textColor">@color/primary_color_themed</item>
        <item name="android:drawableTint">@color/primary_color_themed</item>
        <item name="tint">@color/primary_color_themed</item>
    </style>

    <style name="ButtonStyle.Filled" parent="ButtonStyle">
        <item name="android:backgroundTint">@color/commonutils_filled_background_color</item>
    </style>

    <style name="ButtonStyle.Filled.Themed" parent="ButtonStyle.Filled">
        <item name="android:backgroundTint">@color/commonutils_filled_background_color_themed</item>
        <item name="android:textColor">@color/commonutils_primary_text_icon_color_themed</item>
        <item name="android:drawableTint">@color/commonutils_primary_text_icon_color_themed</item>
        <item name="tint">@color/commonutils_primary_text_icon_color_themed</item>
    </style>

    <style name="DrawerDividerStyle">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:foreground">@drawable/drawer_item_separator_bg</item>
    </style>

    <!-- OOBE -->
    <style name="OOBE.TextView.ToS" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/commonutils_primary_text_icon_color</item>
        <item name="android:textColorLink">@color/primary_color_themed</item>
    </style>

</resources>